#include<stdio.h>

int main() {
    int dia;
    for(;;){
    printf("\nDigite um numero de 1 a 7: ");
    scanf("%d", &dia);
    
    if (dia <= 7) {
        switch(dia) {
            case 1:
                 printf("Domingo");
                break;
            case 2:
                printf("Segunda");
                break;
            case 3:
                printf("Terça");
                break;
            case 4:
                printf("Quarta");
                break;
            case 5:
                printf("Quinta");
                break;
            case 6:
                printf("Sexta");
                break;
            case 7:
              printf("Sábado");
                break;
        }
    } else {
        printf("Valor incorreto");
    }
}
    return 0;
}
